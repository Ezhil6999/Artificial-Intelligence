import cv2

img=cv2.imread('lena.jpg',1)

img1=cv2.rectangle(img,(0,0),(250,500),(255,0,0),-1)
cv2.imshow("frame",img1)
cv2.waitKey(0)
cv2.destroyAllWindows()
