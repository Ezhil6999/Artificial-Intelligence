import cv2

img=cv2.imread('lena.jpg',1)
font=cv2.FONT_HERSHEY_SIMPLEX

img1=cv2.putText(img,'openCV by Ezhil',(255,250),font,1,(255,255,0),5,cv2.LINE_AA)
cv2.imshow("frame",img1)
cv2.waitKey(0)
cv2.destroyAllWindows()
